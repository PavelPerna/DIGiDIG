# DIGiDIG Staging Environment Configuration
# Copy this file to .env.staging and customize values

# GitHub Container Registry
GITHUB_REPOSITORY_OWNER=your-github-username
IMAGE_TAG=latest

# Database Configuration
DB_NAME=digidig_staging
DB_USER=staging_user
DB_PASS=staging_secure_password_123

# MongoDB Configuration
MONGO_USER=staging_mongo
MONGO_PASS=staging_mongo_secure_123

# JWT Configuration
JWT_SECRET=staging_jwt_secret_please_change_in_production

# Admin Account
ADMIN_EMAIL=admin@staging.digidig.local
ADMIN_PASSWORD=staging_admin_secure_123

# SMTP Configuration (for email sending)
SMTP_HOST=smtp.staging.example.com
SMTP_USERNAME=staging_smtp_user
SMTP_PASSWORD=staging_smtp_password
SMTP_PORT=587
SMTP_USE_TLS=true

# Additional Configuration
DIGIDIG_ENV=staging